{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}